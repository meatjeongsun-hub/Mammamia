<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ... 기존 AppTheme ... -->

    <!-- 스플래시 화면을 위한 테마 -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- 스플래시 화면의 배경색 -->
        <item name="windowSplashScreenBackground">@android:color/white</item>

        <!-- 스플래시 화면에 표시될 아이콘 (로고) -->
        <!-- res/drawable 폴더에 있는 로고 파일을 사용합니다. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo</item>

        <!-- 스플래시 화면이 끝난 후 적용될 기본 앱 테마 -->
        <item name="postSplashScreenTheme">@style/Base.Theme.Mammamia</item>

    </style>

    <!-- 기본 커스텀 버튼 스타일 (공통 속성) -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item> <!-- 버튼 높이를 고정하여 보기 좋게 만듭니다 -->
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <!-- 채워진 버튼을 위한 스타일 -->
    <style name="CustomButton.Filled" parent="CustomButton">
        <item name="android:background">@drawable/button_background_filled</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- 테두리 버튼을 위한 스타일 -->
    <style name="CustomButton.Outlined" parent="CustomButton">
        <item name="android:background">@drawable/button_background_outlined</item>
        <item name="android:textColor">#00AFFF</item> <!-- 테두리 색상과 동일하게 맞춥니다 -->
    </style>
</resources>