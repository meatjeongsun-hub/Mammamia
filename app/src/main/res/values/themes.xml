<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- [1] 기본 앱 테마 설정 (Base Theme) -->
    <!-- 스플래시가 끝난 후 보여질 실제 앱의 디자인입니다 -->
    <style name="Base.Theme.Mammamia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 메인 색상 (파란색) -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryVariant">#1976D2</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- 보조 색상 (주황색) -->
        <item name="colorSecondary">#FF9800</item>
        <item name="colorSecondaryVariant">#F57C00</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- 상태바 색상 -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <!-- [2] 테마 이름 연결 -->
    <style name="Theme.Mammamia" parent="Base.Theme.Mammamia" />

    <!-- [3] 스플래시 화면 테마 (앱 켜질 때 로딩 화면) -->
    <!-- 1단계에서 라이브러리를 추가했으므로 이제 에러가 나지 않습니다 -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- 배경색 (흰색) -->
        <item name="windowSplashScreenBackground">@android:color/white</item>

        <!-- 로고 아이콘 -->
        <!-- [수정됨] app_logo 파일이 없어서 에러가 날 수 있으니, 일단 기본 아이콘(@mipmap/ic_launcher)으로 해뒀습니다. -->
        <!-- 나중에 이미지를 넣으셨으면 @drawable/app_logo 로 바꾸세요. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- 스플래시 끝나면 적용될 테마 -->
        <item name="postSplashScreenTheme">@style/Theme.Mammamia</item>
    </style>

    <!-- [4] 커스텀 버튼 스타일 (요청하신 내용) -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <!-- 꽉 찬 버튼 -->
    <style name="CustomButton.Filled" parent="CustomButton">
        <!-- [수정됨] 배경 파일이 없으면 에러가 나므로 파란색(#2196F3)으로 대체했습니다 -->
        <item name="android:background">#2196F3</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- 테두리 버튼 -->
    <style name="CustomButton.Outlined" parent="CustomButton">
        <!-- [수정됨] 배경 파일이 없으면 에러가 나므로 투명으로 대체했습니다 -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#00AFFF</item>
    </style>

</resources>