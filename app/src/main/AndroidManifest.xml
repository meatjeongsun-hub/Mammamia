<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 인터넷 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 위치 정보 권한 (정확한 위치, 대략적인 위치) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.Mammamia"
        tools:targetApi="31">

        <!-- (수정) Google Maps API 키는 application 태그 안에 있어야 합니다. -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_API_KEY" />

        <!-- 다른 액티비티들 -->
        <activity
            android:name=".activity_notifications"
            android:exported="false" />
        <activity
            android:name=".activity_danger_zone"
            android:exported="false" />
        <activity
            android:name=".activity_directions"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- (수정) login 액티비티를 시작 액티비티로 변경하고 스플래시 테마를 적용합니다. -->
        <activity
            android:name=".login"
            android:exported="true"
            android:theme="@style/Theme.App.Starting"> <!-- 스플래시 테마 적용 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- (삭제) SplashActivity는 더 이상 필요 없으므로 삭제했습니다. -->

    </application>

</manifest>